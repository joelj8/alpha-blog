
<h2 align="center"> Title: <%= @article.title %> </h2>  

<div class="well col-xs-8 col-xs-of-2">
  <h4 class="center description"><strong> Description: </strong> </h4> <hr>
  

  Description: <%= (@article.description) %>

  <div class="article-actions">
    <%= link_to "Edit this Articles", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete this Articles", article_path(@article), method: :delete, data: {confirm: "Arte you sure you want to delete the article?"}, class: "btn btn-xs btn-danger" %>
    <%= link_to "View all Articles", articles_path, class: "btn btn-xs btn-success" %>
  </div>
</div>